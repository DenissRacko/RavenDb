@model Logic.Domain.Employee

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CompanyId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CompanyId)
        </dd>

    </dl>
    <div id="comments-section">      
        <table id="comments-table" class="table table-striped hidden">
            <thead>
                <tr>
                    <th>
                        Comment
                    </th>
                    <th>
                        Vote
                    </th>
                </tr>                
            </thead>
            <tbody></tbody>
        </table>
        
    </div>

</div>
<p>
    @Html.ActionLink("Edit", "EditEmployee", new { id = Model.Id }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) |
    @Html.ActionLink("Back to Company", "Details", "Company", new { id = Model.CompanyId }, null)
</p>

<script type="text/javascript">
    $(function () {
        $.ajax({
            url: "https://localhost:44321/Home/getEmployeeComments",
            data: { id:@Model.Id},
            success: function (comments) {
                var container = $("#comments-section");
                if (comments.length > 0) {
                    var table = $("#comments-table");
                    var tbody = table.find("tbody").first();
                    table.removeClass("hidden");

                    jQuery(comments).each(function (index, item) {
                        tbody.append("<tr><td>" + item.commentary + "</td><td>" + item.vote + "</td></tr>")
                    });
                }
                else {
                    container.html("Employee left 0 comments")
                }
            }
        });
    })
</script>
